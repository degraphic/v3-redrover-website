#publisher-detail
  .row   
    .span21
      .row
        .span5
          =image_tag('amnh_logo.png', :class => "pub")
        .publisher-info.span16
          .row
            .span14
              %h2 DiMenna Children's History Museum. New-York Historical Society.       
