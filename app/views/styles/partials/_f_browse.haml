%h1.title Featured Events Page
#featured-page.filter-controls.well
  .top_controls
    .btn-toolbar
      #dateButtons.btn-group.filter{'data-toggle' => 'buttons-radio'}
        %button.btn.active Today
        %button.btn Tomorrow
        %button.btn Weekend
        %button.btn Calendar   
        %input#calendarDate{type:"hidden" , _action:'calendarEvents on="change" target="view"'}
      .btn-group.within
        %p within  
      .btn-group.filter#miles
        %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
          0.5 mi
          %span.caret
        %ul.dropdown-menu
          %%li
            %a{:href => "#"} 1 mile
          %li
            %a{:href => "#"} 2 miles
          %li
            %a{:href => "#"} 5 miles
          %li
            %a{:href => "#"} 10+ miles
    .additional
      %p#show_filter
        Show Additional Filters
        %span.caret.down
  #moreFilter.bottom_controls.hide
    %form.form-inline
      %h3 Results Near
      %input.Location{:placeholder => "Current Location", :type => "text"}
      %h4 eg playgrounds, museums
    .btn-toolbar
      #ageButtons.btn-group.filter{'data-toggle' => 'buttons-radio'}
        %button.btn Baby and Toddlers
        %button.btn Kids And Teens
        %button.btn Grown Ups Only  
      .btn-group.filter.pull-right
        %button.btn.btn-primary{:type => "submit"} Filter        
    %form.starred.form-inline
      %label.checkbox
        %input{:type => "checkbox"}
          Starred by People I Follow
      %label.checkbox
        %input{:type => "checkbox"}
          Most Starred on RedRover

