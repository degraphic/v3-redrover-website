:javascript 
  $(function(){

    $('.publisher-view').click(function(){
      var eventrow = $('#place-events > .row').last();

      $('.publisher-view span').each(function(){
        $(this).toggleClass('hide');
      });

      if (eventrow.hasClass('hidden')){
        eventrow.removeClass('hidden').slideDown();
        $('.publisher-view .caret').addClass('up');
      }
      else {
        eventrow.addClass('hidden').slideUp();
        $('.publisher-view .caret').removeClass('up');
      }
      
    });
  });

